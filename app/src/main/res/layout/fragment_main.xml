<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taller2.manuel.comunicacion_tcp_auto.MainActivity$PlaceholderFragment">


    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comando_enviado"
        android:text="Comando enviado"
        android:layout_below="@+id/btn_send_voice"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tf_comando"
        android:hint="avanzar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send_voice"
        android:text="Comando por voz"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_send_Hardcode"
        android:layout_alignStart="@+id/btn_send_Hardcode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send_Hardcode"
        android:text="Enviar Comando"
        android:layout_below="@+id/tf_comando"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:layout_below="@+id/btn_send_Hardcode"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_avanzar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_below="@+id/btn_avanzar"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_retroc" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:id="@+id/btn_izq"
        android:layout_below="@+id/btn_send_Hardcode"
        android:layout_alignRight="@+id/tv_comando_enviado"
        android:layout_alignEnd="@+id/tv_comando_enviado"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/arrow_up_float"

        android:id="@+id/btn_dere"
        android:layout_alignTop="@+id/btn_izq"
        android:layout_alignLeft="@+id/tv_comando_enviado"
        android:layout_alignStart="@+id/tv_comando_enviado" />


</RelativeLayout>
